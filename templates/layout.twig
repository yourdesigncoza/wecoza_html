<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{{ app_name }}{% endblock %}</title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Line Icons -->
    <link href="{{ base_path }}/assets/css/line.css" rel="stylesheet">
    <!-- bootstrap demo -->
    <link href="{{ base_path }}/assets/css/ydcoza-bootstrap-demo.css" rel="stylesheet">
    <!-- Theme -->
    <link href="{{ base_path }}/assets/css/ydcoza-theme.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="{{ base_path }}/assets/css/ydcoza-styles.css" rel="stylesheet">
    
    {% block head %}{% endblock %}
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container-fluid">
            <a class="navbar-brand" href="{{ base_path }}/">
                <i class="bi bi-mortarboard-fill me-2"></i>
                {{ app_name }}
            </a>
            
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="{{ base_path }}/dashboard">
                            <i class="bi bi-speedometer2 me-1"></i>
                            Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ base_path }}/classes">
                            <i class="bi bi-collection me-1"></i>
                            Classes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="{{ base_path }}/classes/create">
                            <i class="bi bi-plus-circle me-1"></i>
                            Create Class
                        </a>
                    </li>
                </ul>
                
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                            <i class="bi bi-person-circle me-1"></i>
                            User
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="{{ base_path }}/profile">Profile</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form method="POST" action="{{ base_path }}/logout" class="d-inline">
                                    <button type="submit" class="dropdown-item">Logout</button>
                                </form>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container-fluid">
        <div class="row">
            {% if show_sidebar|default(true) %}
            <!-- Sidebar -->
            <div class="col-md-2 sidebar p-3">
                <h6 class="text-muted mb-3">Quick Actions</h6>
                <div class="list-group list-group-flush">
                    <a href="{{ base_path }}/classes" class="list-group-item list-group-item-action">
                        <i class="bi bi-list me-2"></i>
                        View All Classes
                    </a>
                    <a href="{{ base_path }}/classes/create" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus me-2"></i>
                        Create New Class
                    </a>
                    <a href="{{ base_path }}/dashboard" class="list-group-item list-group-item-action">
                        <i class="bi bi-graph-up me-2"></i>
                        Dashboard
                    </a>
                </div>
                
                <h6 class="text-muted mb-3 mt-4">Reports</h6>
                <div class="list-group list-group-flush">
                    <a href="{{ base_path }}/classes/export/csv" class="list-group-item list-group-item-action">
                        <i class="bi bi-file-earmark-spreadsheet me-2"></i>
                        Export CSV
                    </a>
                    <a href="{{ base_path }}/classes/export/pdf" class="list-group-item list-group-item-action">
                        <i class="bi bi-file-earmark-pdf me-2"></i>
                        Export PDF
                    </a>
                </div>
            </div>
            
            <!-- Main Content Area -->
            <div class="col-md-10 main-content">
            {% else %}
            <div class="col-12 main-content">
            {% endif %}
                {% block content %}{% endblock %}
            </div>
        </div>
    </div>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JavaScript -->
    <script>
        // Initialize floating labels
        document.addEventListener('DOMContentLoaded', function() {
            // Handle floating labels for selects
            const selects = document.querySelectorAll('.floating-label select');
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    if (this.value !== '') {
                        this.classList.add('has-value');
                    } else {
                        this.classList.remove('has-value');
                    }
                });
                
                // Initialize on page load
                if (select.value !== '') {
                    select.classList.add('has-value');
                }
            });
        });
    </script>
    
    {% block scripts %}{% endblock %}
</body>
</html>
