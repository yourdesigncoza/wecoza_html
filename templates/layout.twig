    <!-- Custom JavaScript -->
    <script>
        // Theme Control Toggle
        document.addEventListener('DOMContentLoaded', function() {
            const themeToggle = document.getElementById('themeControlToggle');
            if (themeToggle) {
                themeToggle.addEventListener('change', function() {
                    const theme = this.checked ? 'dark' : 'light';
                    document.documentElement.setAttribute('data-bs-theme', theme);
                    localStorage.setItem('phoenixTheme', theme);
                });

                // Set initial state
                const currentTheme = localStorage.getItem('phoenixTheme') || 'light';
                themeToggle.checked = currentTheme === 'dark';
            }

            // Initialize floating labels
            const selects = document.querySelectorAll('.floating-label select');
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    if (this.value !== '') {
                        this.classList.add('has-value');
                    } else {
                        this.classList.remove('has-value');
                    }
                });

                // Initialize on page load
                if (select.value !== '') {
                    select.classList.add('has-value');
                }
            });

            // Support chat toggle
            const supportChatToggle = document.querySelector('.btn-support-chat');
            const supportChat = document.querySelector('.support-chat');
            if (supportChatToggle && supportChat) {
                supportChatToggle.addEventListener('click', function() {
                    supportChat.style.display = supportChat.style.display === 'none' ? 'block' : 'none';
                });
            }
        });
    </script>

