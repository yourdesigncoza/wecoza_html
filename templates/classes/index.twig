{% extends "layout.twig" %}

{% block title %}Classes - {{ parent() }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h2">
        <i class="bi bi-collection me-2"></i>
        Classes
    </h1>
    <div>
        <a href="{{ base_path }}/classes/create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>
            Create New Class
        </a>
    </div>
</div>

<!-- Filters -->
<div class="card mb-4">
    <div class="card-header">
        <h6 class="mb-0">
            <i class="bi bi-funnel me-2"></i>
            Filters
        </h6>
    </div>
    <div class="card-body">
        <form method="GET" action="{{ base_path }}/classes" class="row g-3">
            <div class="col-md-3">
                <label for="client_id" class="form-label">Client</label>
                <select class="form-select" id="client_id" name="client_id">
                    <option value="">All Clients</option>
                    {% for client in clients %}
                        <option value="{{ client.id }}" {{ filters.client_id == client.id ? 'selected' : '' }}>
                            {{ client.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-3">
                <label for="class_type" class="form-label">Class Type</label>
                <select class="form-select" id="class_type" name="class_type">
                    <option value="">All Types</option>
                    {% for type in class_types %}
                        <option value="{{ type.id }}" {{ filters.class_type == type.id ? 'selected' : '' }}>
                            {{ type.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-3">
                <label for="class_agent" class="form-label">Agent</label>
                <select class="form-select" id="class_agent" name="class_agent">
                    <option value="">All Agents</option>
                    {% for agent in agents %}
                        <option value="{{ agent.id }}" {{ filters.class_agent == agent.id ? 'selected' : '' }}>
                            {{ agent.name }}
                        </option>
                    {% endfor %}
                </select>
            </div>
            
            <div class="col-md-3">
                <label for="search" class="form-label">Search</label>
                <div class="input-group">
                    <input type="text" class="form-control" id="search" name="search" 
                           placeholder="Class code or subject..." value="{{ filters.search|default('') }}">
                    <button type="submit" class="btn btn-outline-secondary">
                        <i class="bi bi-search"></i>
                    </button>
                </div>
            </div>
            
            <div class="col-12">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-funnel me-1"></i>
                    Apply Filters
                </button>
                <a href="{{ base_path }}/classes" class="btn btn-outline-secondary">
                    <i class="bi bi-x-circle me-1"></i>
                    Clear Filters
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Classes Table -->
<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h6 class="mb-0">
            Classes 
            {% if pagination.total_items > 0 %}
                ({{ pagination.total_items }} total)
            {% endif %}
        </h6>
        <div class="btn-group" role="group">
            <a href="{{ base_path }}/classes/export/csv" class="btn btn-sm btn-outline-success">
                <i class="bi bi-download me-1"></i>
                CSV
            </a>
            <a href="{{ base_path }}/classes/export/pdf" class="btn btn-sm btn-outline-danger">
                <i class="bi bi-file-pdf me-1"></i>
                PDF
            </a>
        </div>
    </div>
    <div class="card-body">
        {% if classes %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Class Code</th>
                        <th>Subject</th>
                        <th>Type</th>
                        <th>Client</th>
                        <th>Agent</th>
                        <th>Start Date</th>
                        <th>Duration</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for class in classes %}
                    <tr>
                        <td>
                            <a href="{{ base_path }}/classes/{{ class.classId }}" class="text-decoration-none fw-bold">
                                {{ class.classCode }}
                            </a>
                        </td>
                        <td>{{ class.classSubject }}</td>
                        <td>
                            <span class="badge bg-secondary text-capitalize">
                                {{ class.classType }}
                            </span>
                        </td>
                        <td>
                            {% set client = clients|filter(c => c.id == class.clientId)|first %}
                            {{ client.name|default('Unknown') }}
                        </td>
                        <td>
                            {% set agent = agents|filter(a => a.id == class.classAgent)|first %}
                            {{ agent.name|default('Unassigned') }}
                        </td>
                        <td>{{ class.originalStartDate|date('M d, Y') }}</td>
                        <td>{{ class.classDuration }} days</td>
                        <td>
                            {% set today = "now"|date('Y-m-d') %}
                            {% if class.originalStartDate > today %}
                                <span class="badge bg-secondary">Upcoming</span>
                            {% elseif class.originalStartDate <= today %}
                                <span class="badge bg-success">Active</span>
                            {% else %}
                                <span class="badge bg-primary">Completed</span>
                            {% endif %}
                            
                            {% if class.setaFunded %}
                                <span class="badge bg-info ms-1">SETA</span>
                            {% endif %}
                            
                            {% if class.examClass %}
                                <span class="badge bg-warning ms-1">Exam</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a href="{{ base_path }}/classes/{{ class.classId }}" class="btn btn-sm btn-outline-primary" title="View">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a href="{{ base_path }}/classes/{{ class.classId }}/edit" class="btn btn-sm btn-outline-secondary" title="Edit">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <button type="button" class="btn btn-sm btn-outline-danger"
                                        onclick="confirmDelete({{ class.classId }}, '{{ class.classCode }}')" title="Delete">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if pagination.total_pages > 1 %}
        <nav aria-label="Classes pagination" class="mt-4">
            <ul class="pagination justify-content-center">
                {% if pagination.current_page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ pagination.current_page - 1 }}{% for key, value in filters %}&{{ key }}={{ value }}{% endfor %}">
                        <i class="bi bi-chevron-left"></i>
                    </a>
                </li>
                {% endif %}

                {% for page in range(max(1, pagination.current_page - 2), min(pagination.total_pages, pagination.current_page + 2)) %}
                <li class="page-item {{ page == pagination.current_page ? 'active' : '' }}">
                    <a class="page-link" href="?page={{ page }}{% for key, value in filters %}&{{ key }}={{ value }}{% endfor %}">
                        {{ page }}
                    </a>
                </li>
                {% endfor %}

                {% if pagination.current_page < pagination.total_pages %}
                <li class="page-item">
                    <a class="page-link" href="?page={{ pagination.current_page + 1 }}{% for key, value in filters %}&{{ key }}={{ value }}{% endfor %}">
                        <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                {% endif %}
            </ul>
        </nav>
        {% endif %}

        {% else %}
        <div class="text-center py-5">
            <i class="bi bi-inbox" style="font-size: 4rem; color: #dee2e6;"></i>
            <h4 class="mt-3 text-muted">No Classes Found</h4>
            {% if filters %}
            <p class="text-muted">Try adjusting your filters or search terms.</p>
            <a href="{{ base_path }}/classes" class="btn btn-outline-secondary me-2">Clear Filters</a>
            {% else %}
            <p class="text-muted">Get started by creating your first class.</p>
            {% endif %}
            <a href="{{ base_path }}/classes/create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>
                Create New Class
            </a>
        </div>
        {% endif %}
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the class <strong id="deleteClassName"></strong>?</p>
                <p class="text-danger">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>
                        Delete Class
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
function confirmDelete(classId, className) {
    document.getElementById('deleteClassName').textContent = className;
    document.getElementById('deleteForm').action = '{{ base_path }}/classes/' + classId + '/delete';

    const modal = new bootstrap.Modal(document.getElementById('deleteModal'));
    modal.show();
}

// Auto-submit form when filters change (optional)
document.addEventListener('DOMContentLoaded', function() {
    const filterSelects = document.querySelectorAll('#client_id, #class_type, #class_agent');
    filterSelects.forEach(select => {
        select.addEventListener('change', function() {
            // Optionally auto-submit the form
            // this.form.submit();
        });
    });
});
</script>
{% endblock %}
