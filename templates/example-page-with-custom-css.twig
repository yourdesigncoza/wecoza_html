{% extends "layout.twig" %}

{% block head %}
<style>
    /* Page-specific custom CSS */
    .page-specific-class {
        background-color: #f0f8ff;
        border: 2px solid #4169e1;
        border-radius: 8px;
        padding: 20px;
    }
    
    .custom-header {
        color: #2e8b57;
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
    }
</style>
{% endblock %}

{% block title %}Custom Page - {{ parent() }}{% endblock %}

{% block content %}
<div class="page-specific-class">
    <h1 class="custom-header">This page has custom CSS</h1>
    <p>This demonstrates how to add page-specific CSS using Twig template blocks.</p>
</div>
{% endblock %}
