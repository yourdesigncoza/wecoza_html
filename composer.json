{
    "name": "wecoza/classcrude-php",
    "description": "Standalone Class Management CRUD System in PHP",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "slim/slim": "^4.12",
        "slim/psr7": "^1.6",
        "php-di/php-di": "^7.0",
        "monolog/monolog": "^3.0",
        "vlucas/phpdotenv": "^5.5",
        "respect/validation": "^2.2",
        "league/csv": "^9.8",
        "dompdf/dompdf": "^2.0",
        "phpoffice/phpspreadsheet": "^1.28",
        "firebase/php-jwt": "^6.8",
        "twig/twig": "^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "^3.7",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "ClassCRUD\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ClassCRUD\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "analyse": "phpstan analyse src --level=8"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
